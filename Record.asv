clear all;
signal = 'me_ahojt';
info = audiodevinfo;
file = 'me_ahoj.mat';
file = 'parametrs.mat';

Fs = 44000; %Sample Rate
nBits = 16;
nChanels = 1;
ID = -1; 

aro=audiorecorder(Fs,nBits,nChanels,ID);

disp('Start speaking.')
recordblocking(aro, 2);
pause(2);
disp('Stop recording.')

%play(aro)

speech = getaudiodata(aro);
plot([1:size(speech)]/Fs, speech);

%sound(speech, Fs);

soundsc(speech, Fs); %== sound(speech/max(abs(speech)))

save(file, 'speech');
save(file, 'Fs');